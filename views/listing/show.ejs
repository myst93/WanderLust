<% layout("./layouts/biolerplate")%>

<body>
    <div class="row ">
        <div class="col-8 offset-2">
              <b><h3>Listing Details:</h3></b>
              </div>
  <div class="card col-6 offset-2" >
    <img src="<%=listing.image && listing.image.url ? listing.image.url: listing.image%>>" class="card-img-top" alt="alteranate_image" />
    <div class="card-body">
      <p class="card-text">
       <b><%=listing.title%></b><br>
       <%=listing.description%><br>
       &#8377; <%=listing.price.toLocaleString("en-IN")%><br>
        <%=listing.location%><br>
        <%=listing.country%><br>
      </p>
    </div>
  </div>
  <br><br><br><br>
  <div class="col-1 editsss ">
  <form method="GET" action="/listings/<%=listing._id%>/edit">
    <button  class="btn btn-dark offset-2">Edit</button>
  </form>
  <form method="POST" action="/listings/<%=listing._id%>/?_method=DELETE">
    <button class="btn btn-dark  offset-2">DELETE</button>
  </form>
  
  </div>
          </div>
    </div>
</body>
