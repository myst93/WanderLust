<% layout("./layouts/biolerplate")%> <!-- This peice of code is give the access of the biolerplate code to inserted in this so that we have do not have to right the same code everytime -->

<body>
    <h3>All the listing</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->


    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 g-4">
         <%for(let listing of allListing){%>
    <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col">
        <img 
          src="<%= listing.image && listing.image.url ? listing.image.url : listing.image %>" 
          class="card-img-top" 
          alt="listing_image" style="height: 20rem; width: 20rem;">
        <div class="card-img-overlay"></div>
      <div class="card-body">
      <p class="card-text"><%=listing.title%> <br> &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /night
        </p>
      </div>
      
    </div>
    </a>
   <%}%>
    </div>
   
</body>




